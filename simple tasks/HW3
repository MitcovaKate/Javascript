    <script>
        let studentGeneralMark = prompt("Student's General Mark \n enter 0-10")
        let studentBudget = prompt("Student's budget \n enter 0-1000000")
        let studentConnection = prompt("Student's connection \n enter 0(false) or 1(true)")
        const UniversityGrade = 7
        const UniversityBudget = 40000
        const UniversityConnection = 1
        let approve = 
        studentGeneralMark >= UniversityGrade || studentBudget >= UniversityBudget || studentConnection == UniversityConnection
    alert("Will he ever be approved: " + approve)
    </script>
